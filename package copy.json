{
  "name": "job-tasker-v2",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start -p 3000",
    "dev": "next dev",
    "cypress:run": "cypress run --config video=false --headless",
    "cypress:open": "cypress open",
    "audit": "npm audit fix",
    "test:ci": "bash ./scripts/test-ci.sh",
    "start:ci": "next start -p 3000",
    "svgr": "npx @svgr/cli -d src/components/icons --ignore-existing --icon --typescript public/icons",
    "prepare": "husky || true",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint \"{src,pages,test}/**/*.{ts,tsx,js,jsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run format && npm run prettier && npm run lint && npm run typecheck"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "isomorphic-unfetch": "^4.0.2",
    "next": "^15.1.6",
    "next-compose-plugins": "^2.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-use": "^17.6.0",
    "sass": "^1.83.4",
    "tailwindcss": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.1",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "cypress": "^14.0.1",
    "eslint": "^9.19.0",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.0.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["npm run lint"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
